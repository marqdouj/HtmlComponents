{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "wwwroot/js",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": [ "scripts/**/*" ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}